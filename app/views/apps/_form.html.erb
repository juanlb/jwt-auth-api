<%= form_with(model: app, local: true) do |form| %>
  <% if app.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h4><%= pluralize(app.errors.count, "error") %> prohibited this app from being saved:</h4>

      <ul>
      <% app.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<table class="table">
  <tr>
    <td>
      <%= form.label :name %>
    </td>
    <td>
      <%= form.text_field :name %>
    </td>
  </tr>
  <tr>
    <td>
    <%= form.label :permissions %>
    </td>
    <td>
    <%= form.text_area(:permissions, size: '50x15', value: json_pretty_generate(app.permissions)) %>
    </td>
  </tr>
  <tr>
    <td>
    <%= form.label :timeout %>
    </td>
    <td>
    <%= form.number_field :timeout %>
    </td>
  </tr>
</table>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
