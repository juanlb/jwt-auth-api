<h1>Apps</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Permissions</th>
      <th>Timeout</th>
      <th>Users</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= app.name %></td>
        <td>
<pre>
<small><%= json_pretty_generate(app.permissions) %></small>
</pre>
        </td>
        <td><%= app.timeout %></td>
        <td><%= permissions_state(app.permissions_state) %></td>
        <td><%= link_to 'Show', app, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_app_path(app), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', app, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% content_for :footer do %>
<%= link_to 'New App', new_app_path, class: 'btn btn-primary' %>
<% end %>

