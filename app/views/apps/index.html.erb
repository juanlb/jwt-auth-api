<h1>Apps</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>App key</th>
      <th>Permissions</th>
      <th>Timeout</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= app.name %></td>
        <td><%= app.app_key %></td>
        <td><%= app.permissions %></td>
        <td><%= app.timeout %></td>
        <td><%= link_to 'Show', app %></td>
        <td><%= link_to 'Edit', edit_app_path(app) %></td>
        <td><%= link_to 'Destroy', app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New App', new_app_path %>
