<table class="table">
  <tr>
    <td>
      <strong>Name:</strong>
    </td>
    <td>
      <%= @user.name %>
    </td>
  </tr>
  <tr>
    <td>
      <strong>Email:</strong>
    </td>
    <td>
      <%= @user.email %>
    </td>
  </tr>
  <tr>
    <td>
     <strong>Enabled:</strong>
    </td>
    <td>
     <%= enabled_icon(@user.enabled) %>
    </td>
  </tr>
  <tr>
    <td>
     <strong>User key:</strong>
    </td>
    <td>
      <%= @user.user_key %>
    </td>
  </tr>
  <tr>
    <td>
     <strong>Password Setted:</strong>
    </td>
    <td>
      <%= @user.password_setted %>
    </td>
  </tr>
  <tr>
    <td>
      <strong>Apps:</strong>
    </td>
    <td>
      <%= @user.allowed_apps.map { |allowed_app| link_to "#{allowed_app.app.name} #{permission_state(allowed_app)}".html_safe, user_allowed_app_path(@user, allowed_app) }.join(', ').html_safe %>
    </td>
  </tr>
</table>

<% content_for :footer do %>
<%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-primary' %>
<%= link_to 'Set Password', password_user_path(@user), class: 'btn btn-primary' %>
<% end %>

<% content_for :operations do %>
<%= link_to 'Configure Apps', user_allowed_apps_path(@user), class: 'btn btn-primary' %>
<%= link_to 'Reset User Key', reset_user_key_user_path(@user), data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %>
<%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
<% end %>