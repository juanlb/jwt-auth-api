<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-signin'}) do |f| %>
  <%= image_tag 'pic_logo.svg', class: 'mb-4'%>
  <h1 class="h3 mb-3 font-weight-normal">Sign up</h1>

  <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.label :email, class: 'sr-only'  %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>

    <%= f.label :password, class: 'sr-only' %>
    <% if @minimum_password_length %>
    <% min_pass_length_label = "(#{@minimum_password_length} characters minimum)" %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "Pass #{min_pass_length_label}" %>

    <%= f.label :password_confirmation, class: 'sr-only' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Password confirmation' %>

    <%= f.submit "Sign up", class: 'btn btn-lg btn-primary btn-block'  %>
    <%= render "devise/shared/links" %>
<% end %>

