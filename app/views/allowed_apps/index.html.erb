<%= render 'user_app', user: @user, allowed_app: @allowed_app %>

<h1>Allowed Apps</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>App</th>
      <th>Permissions</th>
      <th>Valid Permissions</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.allowed_apps.select(&:persisted?).each do |allowed_app| %>
      <tr>
        <td class="table-cell" data-href="<%= user_allowed_app_path(@user, allowed_app) %>">
          <%= allowed_app.app.name %>
        </td>
        <td class="table-cell" data-href="<%= user_allowed_app_path(@user, allowed_app) %>">
          <%= allowed_app.permissions %>
        </td>
        <td class="table-cell" data-href="<%= user_allowed_app_path(@user, allowed_app) %>">
          <%= permission_state(allowed_app) %><%=  %>
        </td>
        <td><%= link_to 'Edit', edit_user_allowed_app_path(@user, allowed_app), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', user_allowed_app_path(@user, allowed_app), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h1>Add App</h1>
<%= render 'new_form', allowed_app: @allowed_app %>
